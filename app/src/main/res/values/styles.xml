<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/blue_card_background</item>
    </style>


    <style name="Text_60_Opacity">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_primary</item>
    </style>

    <style name="MiddleSizedTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MiddleSizedRegularTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_primary</item>
    </style>

    <style name="GrayTextWithArrow">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_secondary</item>
        <item name="drawableEndCompat">@drawable/ic_right_arrow</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="BlackSmallText60">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="SmallWhiteText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LargeWhiteText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GraySmallText_60">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="GraySmallText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_primary</item>
    </style>

    <style name="GrayNextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_add_button</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonNegative</item>
        <item name="android:textAppearance">@style/AlertDialogText</item>
    </style>

    <style name="AlertButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AlertButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AlertDialogText">
        <item name="android:textSize">20sp</item>
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="SmallBlueText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_card_background</item>
    </style>
</resources>